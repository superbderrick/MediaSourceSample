  <body>

  <table>
       <tr class="dash">
        <td colspan="2">
          <select id="mpdList" onchange="app.onMpdChange()">
            <option value="assets/angel_one.mpd">"Simple play local</option>
            <option value="assets/angel_one.mpd">"Simple play local with buffer</option>
            <option value="assets/angel_one.mpd">"Normal MPD not encoded content </option>
            <option value="assets/angel_one.mpd">"encoded content </option>
          </select>
        </td>
      </tr>
      
      <tr>
        <td colspan="3">
          <button id="loadButton" onclick="app.loadStream();">Load stream</button>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <button id="praticeButton" onclick="pratice.showSampleCodeTwo();">Pratice</button>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <button id="parseButton" onclick="app.parsempd();">ParseTest</button>
        </td>
      </tr>
    </table>


    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
